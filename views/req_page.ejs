<script type="text/javascript">
var acc_link='/my_request/<%= username %>',x='';
$(document).ready(function(){
  //console.log("inside js");
  var xhttp = new XMLHttpRequest();
  xhttp.open('GET',acc_link,true);
  xhttp.send();
  xhttp.onreadystatechange = function(){
    if(this.readyState==4 && this.status == 200){
      data =JSON.parse(this.responseText);
      if(data.length != 0)
      {
         for(var i=0;i<data.length;i++)
         {
           x += '<div class="card mt-2" style="margin-bottom:15px;background:lightgrey;border-radius : 2px;">'+
	               '<div class="card-body">'+
	               '<p style="font-size:18px;">Request from <em>'+ data[i].req_from_name.toUpperCase() +'</em></p>'+
	               '<p style="text-align:right;"><span><a class="btn btn-success" style="margin-right:10px;" onclick="event.preventDefault();type_of('+ i +');$(\'#requestModal\').modal(\'show\');" href="#">Accept</a>'+
	       		     '<a class="btn btn-success"  href="/del_req/'+ data[i].req_from +'">Delete</a></span></p>'+
	               '</div>'+
	               '</div>'
         }
         document.getElementById('loader').style.display = 'none';
         document.getElementById('rbody').innerHTML += x;
      }
      else {
        document.getElementById('loader').style.display = 'none';
				document.getElementById('rq_empty').style.display = 'block';
      }
    }
  };
  });
function type_of(x)
{
	var y='';
	y = '<p style="text-align:center;color:green;"><a class="hov2" href="/acc_req/'+ data[x].req_from +'/1" >Mobile Number Only</a></p>'+
	    '<p style="text-align:center;color:green;"><a class="hov2" href="/acc_req/'+ data[x].req_from +'/2" >Email Address Only</a></p>'+
	    '<p style="text-align:center;color:green;"><a class="hov2" href="/acc_req/'+ data[x].req_from +'/3" >Both Mobile Number and Email Address</a></p>'
  document.getElementById('mod_body').innerHTML = y;
}
</script>
