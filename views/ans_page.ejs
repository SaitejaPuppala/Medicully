<script type="text/javascript">
  var x = '',data = '';
  $(document).ready(function(){
    var xhttp = new XMLHttpRequest();
  xhttp.open('GET','/answs/<%= oid %>',true);
  xhttp.send();
  xhttp.onreadystatechange = function(){
    if(this.readyState==4 && this.status == 200){
      //console.log(this.responseText);
      data =JSON.parse(this.responseText);
      console.log(data);
      x += '<h3>Q. '+ data.qsn +'</h3>\
          <p style="text-align:right;font-size:18px;">\
           <em class="ml-auto" style="color:green;">\
          <img src="/public/person.jpg" id="qn" alt="person" class="mr-3 mt-3 rounded-circle" style="width:35px;height:35px;margin:15px;">';
               if(data.post_as != '*ANONYMOUS USER')
               {
                x += '<a href="/prof_page/'+ data.username +'" class = "hov2">'+ (data.post_as) +' </a>';
               }
               else
               {
                 x += (data.post_as)+'';
               }

               x += '</em></p>\
          <p style="text-align:right;font-size:18px;margin-top:-20px;">\
          On <em class="ml-auto">'+ data.date +'</em>\
          </p>\
          <hr>';
          if(data.post_as != '*ANONYMOUS USER')
           {
            getpicpath(data.username,'qn');
           }
          if(data.answs.length == 0)
          {
          x += '<p id="bg_empty" style="text-align:center;margin-top:25px;color:red;">-- NO ANSWERS YET --</p>';
          }
          else
          {
          for(var i=0;i < data.answs.length;i++)
          {
            x += '<p style="margin-top:20px;font-size:18px;">\
                  A'+ (i+1) +'. '+ data.answs[i].ans +'</p>\
                  <p style="text-align:right;font-size:16px;">\
                   <em class="ml-auto" style="color:green;">\
                    <img src="/public/person.jpg" id="a'+ i +'" alt="person" class="mr-3 mt-3 rounded-circle" style="width:30px;height:30px;margin:12px"><a href="/prof_page/'+ data.answs[i].ans_by_username +'" class = "hov2">'+ (data.answs[i].ans_by) +' </a>\
                   </em></p>\
                  <p style="text-align:right;font-size:16px;margin-top:-20px;">\
                  On <em class="ml-auto">' + data.answs[i].ans_date + '</em></p><hr>';
            getpicpath(data.answs[i].ans_by_username,'a'+i);
          }
          }
          if('<%= role %>' == 'doctor')
          {
            x +='<p style="text-align:center;display:block;" id="bton">\
                <button class="btn btn-success" onclick="document.getElementById(\'subans_form\').style.display=\'block\';document.getElementById(\'bton\').style.display=\'none\';">ANSWER</button>\
                </p>\
                <form style="margin-top:25px;display:none;" id="subans_form" action="/ans_sub/<%= oid %>" method="get">\
                  <div class="form-group">\
                   <textarea rows="5" type="text" class="form-control" name="answer" pattern="[A-Za-z0-9].*" title="Please enter a valid answer, Answer shouldn\'t start with a space" placeholder="Enter Your Answer" required="true"></textarea>\
                  </div>\
                  <p style="text-align:center;">\
                  <button type="submit" class="btn btn-success mr-4">Submit</button>\
                  <button class="btn btn-danger" type="button" onclick="document.getElementById(\'subans_form\').style.display=\'none\';document.getElementById(\'bton\').style.display=\'block\';">Cancel</button></p>\
                </form>';
          }
          document.getElementById('qsn_ans_body').innerHTML = x;
    }
  };
  });
   function getpicpath(x,y)
  {
  var picpath = '';
  var xhttp = new XMLHttpRequest();
  xhttp.open('GET','/picpath/'+x,true);
  xhttp.send();
  xhttp.onreadystatechange = function(){
  if(this.readyState==4 && this.status == 200){
   picpath =JSON.parse(this.responseText);
   document.getElementById(y).src = picpath;
  }
};
  }
